<dl>
  <% unless current_page?(action: 'index') %>
    <% @domains.each do |domain_score| %>
    <dt>
      <h5>
        <%= domain_score.domain.description %>
        <span class="caret"></span>
      </h5>
    </dt>
    <% domain_score.indicator_scores.sort_by{|o| o.indicator.code }.each do |indicator_score| %>
      <dd class="indicators">
        <%= content_tag :div, class: "#{'highlight' if indicator_score.updated?}" do %>
          <%= link_to "#{indicator_score.indicator.code}: #{indicator_score.indicator.description} (#{indicator_score.evidence_scores.count})", indicator_evidence_scores_path(indicator_score.indicator, indicator_score), class: "#{indicator_score.id} indicator-link", id: "indicator", :remote => true %>
        <% end %>
      </dd>
      <% end %>
    <% end %>
  <% end %>
</dl>
