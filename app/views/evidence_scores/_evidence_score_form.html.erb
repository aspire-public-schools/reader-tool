<%= form_for [@observation_read, @indicator_score], html:{ id: "evidence-form" } do |f| %>
<div class="well well-lg">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3>You are reading the following indicator:</h3>
      <h3 id="indicator-heading"><%= @indicator_score %></h3>
    </div>
    <div class="panel-body">
      <p>Score the following indicators by checking only if the observer has a mistake in either QUALITY or ALIGNMENT on the piece of evidence.<br/>
        (If you make a mistake you may click "Submit Scores" again and it will save again.)
      </p>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th><h4>#</h4></th>
            <th><h4> Evidence </h4></th>
            <th><h4> Quality </h4></th>
            <th><h4> Alignment</h4></th>
          </tr>
        </thead>
        <tbody>
        <% @evidence_scores.each.with_index do |evidence,idx| %>
          <%= f.fields_for :evidence_scores, evidence, include_id: true do |es| %>
            <tr>
              <td><%= idx + 1 %></td>
              <td><%= es.object.formatted_description.html_safe %></td>
              <td><%= es.check_box :quality   %></td>
              <td><%= es.check_box :alignment %></td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
    <div id="blast">
      <div class="alert alert-success alert-dismissable"></div>
    </div>
  </div>

  <label>Comment for Observer on this Indicator:</label>
  <%= f.text_area :comments, class: 'form-control', placeholder: "Your Feedback for the Observer" %>
  <br/>
  <%= f.submit "Submit Scores", id: 'submit-evidence', class: "btn btn-primary score-button" %>
</div>

<% end %>
