<!DOCTYPE html>
<html>
<head>
  <title>ReaderTool</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>

<% if signed_in? %>
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a><%= link_to "Aspire Reader", observations_path, class:"navbar-brand" %></a>
          <ul class="nav navbar-right">
            <li><p class="navbar-text navbar-left">Welcome, <%= current_user.first_name %><p></li>
            <li><%= button_to "logout", logout_path, method: 'delete', class: "btn btn-default navbar-btn navbar-right" %></li>
          </ul>
        </div>
      </div>
  </nav>
<% end %>

  <%= yield %>


</body>
</html>
