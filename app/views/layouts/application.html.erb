<!DOCTYPE html>
<html>
<head>
  <title>ReaderTool</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">


</head>
<body>

<% if signed_in? %>
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="navbar-inner">
      <a><%= link_to "Aspire Reader", observations_path, class:"navbar-brand" %></a>
      <ul class="nav navbar-right">
        <li class="navbar-text">Welcome, <%= current_user.first_name %></li>
        <% if current_user.reader2? %>
          <li><%= link_to "Admin", admin_path, class: "navbar-text" %></li>
        <% end %>
        <li><%= button_to "logout", logout_path, method: 'delete', class: "btn btn-default navbar-btn navbar-right" %></li>
      </ul>
    </div>
  </nav>
<% end %>


      <%= yield %>
</body>
</html>
